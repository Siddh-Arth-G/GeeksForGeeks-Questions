//////////Question Link

https://www.geeksforgeeks.org/batch/gfg-160-problems/track/tree-gfg-160/problem/inorder-traversal

//////////Solution

/* A Binary Tree node

class Node {
    int data;
    Node left, right;
   Node(int item)    {
        data = item;
        left = right = null;
    }
}
*/
class Solution {
    
    void inorder(Node root,ArrayList<Integer> in){
        if(root == null) return;
        inorder(root.left,in);
        in.add(root.data);
        inorder(root.right,in);
    }
    ArrayList<Integer> inOrder(Node root) {
        // CodeGenius
        ArrayList<Integer> in =  new ArrayList<>();
        inorder(root,in);
        return in;
    }
}
