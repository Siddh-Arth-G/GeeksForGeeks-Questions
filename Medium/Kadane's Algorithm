class Solution {

    // arr: input array
    // Function to find the sum of contiguous subarray with maximum sum.
    int maxSubarraySum(int[] arr) {

        // Your code here
        long result = Integer.MIN_VALUE;
        long sum = 0;
        for(int i=0; i<arr.length; i++){
            sum += arr[i];
            if(sum > result){
                result = sum;
            }
            if(sum < 0){
                sum = 0;
            }
        }
        return (int)result;
    }
}
