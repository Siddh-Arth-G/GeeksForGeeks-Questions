class Solution {
    // Function to reverse words in a given string.
    String reverseWords(String str) {
        // code here
        String[] arr = str.split("\\.");
        int i=0;
        int j= arr.length-1;
        while(i<j){
            String temp = arr[i];
            arr[i] = arr[j];
            arr[j] = temp;
            i++;
            j--;
        }
        return String.join(".",arr);
    }
}
